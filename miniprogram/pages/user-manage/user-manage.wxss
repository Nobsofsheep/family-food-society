/* pages/user-manage/user-manage.wxss */
.container {
  padding-bottom: 100rpx;
  box-sizing: border-box;
}

.header {
  width: 100%;
  height: 90rpx;
  background-color: #ff7e43;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9999;
}

.title {
  font-size: 34rpx;
  color: #ffffff;
  font-weight: bold;
}

.user-list {
  margin: 120rpx 30rpx 30rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.empty-tip {
  padding: 60rpx 0;
  text-align: center;
  color: #999999;
  font-size: 30rpx;
}

.list-header {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #f0f0f0;
  font-weight: bold;
  color: #666666;
  font-size: 28rpx;
}

.user-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  align-items: center;
}

.user-item:last-child {
  border-bottom: none;
}

.nickname-col {
  flex: 2;
  display: flex;
  align-items: center;
}

.role-col {
  flex: 1;
  text-align: center;
}

.action-col {
  flex: 1;
  display: flex;
  justify-content: flex-end;
}

.user-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  margin-right: 20rpx;
}

.user-nickname {
  font-size: 28rpx;
  color: #333333;
  max-width: 200rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.role-tag {
  display: inline-block;
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  color: #ffffff;
}

.role-tag.admin {
  background-color: #ff7e43;
}

.role-tag.user {
  background-color: #3498db;
}

.action-btn {
  display: inline-block;
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  color: #ffffff;
}

.action-btn.upgrade {
  background-color: #ff7e43;
}

.action-btn.downgrade {
  background-color: #e74c3c;
} 