/* pages/user-manage/user-manage.wxss */
.container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

/* 调试信息 */
.debug-info {
  margin: 20rpx;
  padding: 20rpx;
  background: #fff;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #666;
  white-space: pre-wrap;
}

/* 搜索栏 */
.search-bar {
  padding: 20rpx;
  background: #fff;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.search-input {
  height: 72rpx;
  background: #f5f5f5;
  border-radius: 36rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
}

/* 角色筛选 */
.filter-bar {
  display: flex;
  padding: 20rpx;
  background: #fff;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.filter-item {
  padding: 10rpx 30rpx;
  font-size: 28rpx;
  color: #666;
  border-radius: 30rpx;
  margin-right: 20rpx;
  background: #f5f5f5;
}

.filter-item.active {
  background: #07c160;
  color: #fff;
}

/* 用户列表 */
.user-list {
  background: #fff;
  border-radius: 8rpx;
  padding: 20rpx;
}

.user-item {
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.user-item:last-child {
  border-bottom: none;
}

.user-info {
  display: flex;
  margin-bottom: 20rpx;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.user-detail {
  flex: 1;
}

.user-name-row {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.nickname {
  font-size: 32rpx;
  font-weight: bold;
  margin-right: 20rpx;
  line-height: 1;
}

.role-tag {
  font-size: 28rpx;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  background: #f0f0f0;
  display: inline-flex;
  align-items: center;
  height: 40rpx;
  line-height: 15%;
}

.role-tag.admin {
  background: #07c160;
  color: #fff;
}

.role-tag.user {
  background: #999;
  color: #fff;
}

.user-id {
  font-size: 24rpx;
  color: #999;
  display: block;
  margin-bottom: 10rpx;
}

.join-time {
  font-size: 24rpx;
  color: #999;
  display: block;
}

.user-actions {
  display: flex;
  justify-content: flex-end;
}

.action-btn {
  margin-left: 20rpx;
  font-size: 24rpx;
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
  background: #f5f5f5;
  color: #666;
}

.role-btn.admin {
  background: #ff4d4f;
  color: #fff;
}

.role-btn.user {
  background: #07c160;
  color: #fff;
}

.status-btn.disabled {
  background: #07c160;
  color: #fff;
}

/* 加载状态 */
.loading-more, .no-more, .empty {
  text-align: center;
  padding: 30rpx;
  color: #999;
  font-size: 28rpx;
} 