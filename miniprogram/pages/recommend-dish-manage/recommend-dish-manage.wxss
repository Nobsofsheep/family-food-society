/* pages/recommend-dish-manage/recommend-dish-manage.wxss */
.container {
  padding: 20rpx;
  background: #f8f8f8;
  min-height: 100vh;
  box-sizing: border-box;
}

.header {
  padding: 30rpx 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.search-box {
  position: relative;
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.search-box icon {
  margin-right: 20rpx;
}

.search-box input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.section {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  position: relative;
  padding-left: 20rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 10rpx;
  width: 6rpx;
  height: 24rpx;
  background: #FF6B35;
  border-radius: 3rpx;
}

.dish-list {
  padding: 10rpx 0;
}

.dish-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.dish-item:last-child {
  border-bottom: none;
}

.dish-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  background: #f5f5f5;
  margin-right: 20rpx;
}

.dish-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.dish-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.dish-name {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.dish-meta {
  margin-bottom: 20rpx;
}

.dish-cook-time {
  font-size: 24rpx;
  color: #999;
}

.dish-actions {
  display: flex;
  justify-content: flex-end;
}

.action-btn {
  margin-left: 20rpx;
  font-size: 24rpx;
  line-height: 1.8;
  min-width: 120rpx;
  margin-right: 0;
}

.action-btn.edit {
  background: #f5f5f5;
  color: #666;
}

.action-btn.toggle-feature {
  background: #FF6B35;
  color: #fff;
}

.empty-state {
  padding: 60rpx 0;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

.loading {
  padding: 40rpx;
  text-align: center;
  color: #999;
  font-size: 28rpx;
} 