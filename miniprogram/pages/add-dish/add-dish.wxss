/* pages/add-dish/add-dish.wxss */
.container {
  padding: 20rpx;
  background: #f8f8f8;
  min-height: 100vh;
}

.header {
  padding: 20rpx 0;
  margin-bottom: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
}

.form-wrapper {
  background: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
}

.form-section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
  position: relative;
  padding-left: 20rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  height: 30rpx;
  width: 6rpx;
  background: #FF6B35;
  border-radius: 3rpx;
}

.optional-text {
  font-size: 24rpx;
  color: #999;
  font-weight: normal;
}

.form-item {
  margin-bottom: 20rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.form-input {
  height: 80rpx;
  border: 1px solid #eee;
  border-radius: 6rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  width: 100%;
  box-sizing: border-box;
}

.picker-content {
  height: 80rpx;
  border: 1px solid #eee;
  border-radius: 6rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
}

.placeholder {
  color: #999;
}

.form-textarea {
  width: 100%;
  height: 160rpx;
  border: 1px solid #eee;
  border-radius: 6rpx;
  padding: 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.upload-container {
  display: flex;
  align-items: center;
  justify-content: center;
}

.upload-btn {
  width: 200rpx;
  height: 200rpx;
  border: 1px dashed #ccc;
  border-radius: 6rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #999;
  font-size: 24rpx;
}

.upload-icon {
  font-size: 50rpx;
  margin-bottom: 10rpx;
}

.upload-preview {
  width: 200rpx;
  height: 200rpx;
  position: relative;
  margin-right: 20rpx;
}

.upload-preview image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 6rpx;
}

.remove-btn {
  position: absolute;
  top: -20rpx;
  right: -20rpx;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0, 0, 0, 0.5);
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
}

.ingredient-row {
  display: flex;
  align-items: center;
}

.ingredient-input {
  flex: 1;
  height: 70rpx;
  border: 1px solid #eee;
  border-radius: 6rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
}

.remove-ingredient-btn {
  width: 60rpx;
  height: 60rpx;
  background: #f5f5f5;
  color: #999;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
  font-size: 30rpx;
}

.add-ingredient-btn {
  height: 80rpx;
  border: 1px dashed #ccc;
  border-radius: 6rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
  font-size: 28rpx;
}

.form-actions {
  display: flex;
  margin-top: 60rpx;
}

.cancel-btn {
  flex: 1;
  background: #f5f5f5;
  color: #666;
  border-radius: 50rpx;
  margin-right: 20rpx;
  font-size: 30rpx;
}

.submit-btn {
  flex: 1;
  background: #FF6B35;
  color: #fff;
  border-radius: 50rpx;
  font-size: 30rpx;
} 