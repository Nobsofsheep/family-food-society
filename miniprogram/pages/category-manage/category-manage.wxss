/* pages/category-manage/category-manage.wxss */
.container {
  padding: 20rpx;
  background: #f8f8f8;
  min-height: 100vh;
}

.header {
  padding: 20rpx 0;
  margin-bottom: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
}

.add-category-form {
  display: flex;
  margin-bottom: 30rpx;
}

.category-input {
  flex: 1;
  height: 80rpx;
  background: #fff;
  border-radius: 8rpx;
  padding: 0 20rpx;
  margin-right: 20rpx;
  font-size: 28rpx;
  border: 1px solid #eee;
}

.add-btn {
  width: 160rpx;
  height: 80rpx;
  background: #FF6B35;
  color: #fff;
  font-size: 28rpx;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0;
}

.category-list {
  background: #fff;
  border-radius: 8rpx;
  padding: 10rpx;
}

.category-item {
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.category-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.category-name {
  font-size: 30rpx;
  color: #333;
}

.category-actions {
  display: flex;
}

.edit-btn {
  background: #f5f5f5;
  color: #666;
  margin-right: 20rpx;
  font-size: 24rpx;
  padding: 0 20rpx;
  min-height: 60rpx;
  line-height: 60rpx;
}

.delete-btn {
  background: #FF6B35;
  color: #fff;
  font-size: 24rpx;
  padding: 0 20rpx;
  min-height: 60rpx;
  line-height: 60rpx;
}

.category-edit {
  display: flex;
  align-items: center;
}

.edit-input {
  flex: 1;
  height: 70rpx;
  border: 1px solid #FF6B35;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  margin-right: 20rpx;
}

.edit-actions {
  display: flex;
}

.cancel-btn {
  background: #f5f5f5;
  color: #666;
  font-size: 24rpx;
  padding: 0 20rpx;
  min-height: 60rpx;
  line-height: 60rpx;
  margin-right: 10rpx;
}

.save-btn {
  background: #FF6B35;
  color: #fff;
  font-size: 24rpx;
  padding: 0 20rpx;
  min-height: 60rpx;
  line-height: 60rpx;
}

.empty-state {
  margin-top: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
} 