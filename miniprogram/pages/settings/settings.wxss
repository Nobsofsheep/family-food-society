/* pages/settings/settings.wxss */
.container {
  padding-bottom: 100rpx;
  box-sizing: border-box;
}

/* 用户信息卡片样式 */
.user-card {
  margin: 30rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.login-prompt {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
}

.avatar-wrapper {
  background-color: transparent;
  padding: 0;
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  border: none;
}

.avatar-wrapper::after {
  border: none;
}

.default-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
}

.login-btn {
  margin-top: 20rpx;
  background-color: #ff7e43;
  color: #ffffff;
  border-radius: 40rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 30rpx;
  font-weight: bold;
  width: 100rpx;
  padding: 0;
}

.login-btn::after {
  border: none;
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
}

.user-detail {
  margin-left: 30rpx;
  display: flex;
  flex-direction: column;
}

.nickname {
  font-size: 34rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.role-tag {
  display: inline-block;
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  color: #ffffff;
}

.role-tag.admin {
  background-color: #ff7e43;
}

.role-tag.user {
  background-color: #3498db;
}

/* 添加手机号样式 */
.phone-number {
  font-size: 24rpx;
  color: #888888;
  margin-top: 10rpx;
}

.section {
  margin: 30rpx 30rpx 0;
  background-color: #ffffff;
  border-radius: 16rpx;
  overflow: hidden;
}

.section.disabled {
  opacity: 0.7;
}

.section-title {
  font-size: 30rpx;
  color: #888888;
  background-color: #f8f8f8;
  padding: 20rpx 30rpx;
}

.menu-list {
  padding: 0 30rpx;
}

.menu-item {
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item.disabled {
  color: #999999;
}

.arrow {
  color: #cccccc;
  font-weight: bold;
}

.switch-item {
  padding: 20rpx 0;
}

.btn-area {
  margin: 60rpx 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.logout-btn {
  background-color: #ff7e43;
  color: #ffffff;
  border-radius: 80rpx;
  height: 80rpx;
  line-height: 55rpx;
  font-size: 32rpx;
  font-weight: bold;
  width: 100%;
}

/* 昵称输入弹窗样式 */
.nickname-dialog {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 10000;
}

.dialog-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}

.dialog-container {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  background-color: #ffffff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.2);
}

.dialog-title {
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.dialog-content {
  padding: 30rpx;
}

.nickname-input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.dialog-footer {
  display: flex;
  border-top: 1rpx solid #f0f0f0;
}

.cancel-btn, .confirm-btn {
  flex: 1;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  font-size: 32rpx;
  border-radius: 0;
  border: none;
}

.cancel-btn {
  color: #666666;
  background-color: #ffffff;
}

.confirm-btn {
  color: #ffffff;
  background-color: #ff7e43;
}

.cancel-btn::after, .confirm-btn::after {
  border: none;
}