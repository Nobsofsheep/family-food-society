.container {
  padding: 20rpx;
  background: #f8f8f8;
  min-height: 100vh;
}

.order-list {
  width: 100%;
}

.order-item {
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.order-time {
  font-size: 28rpx;
  color: #666;
}

.order-status {
  font-size: 28rpx;
  color: #FF6B35;
}

.order-content {
  padding-top: 20rpx;
}

.dish-list {
  margin-bottom: 20rpx;
}

.dish-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.dish-name {
  font-size: 28rpx;
  color: #333;
}

.dish-count {
  font-size: 28rpx;
  color: #999;
}

.order-total {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  font-size: 28rpx;
  color: #333;
}

.total-price {
  color: #FF6B35;
  font-weight: bold;
  margin-left: 10rpx;
}

.no-data {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200rpx;
  color: #999;
  font-size: 28rpx;
}

.loading {
  text-align: center;
  padding: 20rpx;
  color: #999;
  font-size: 28rpx;
} 