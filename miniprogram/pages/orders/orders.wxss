/* pages/orders/orders.wxss */
.container {
  padding: 0;
  background-color: #f8f8f8;
  min-height: 100vh;
}

.header {
  width: 100%;
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-bottom: 1px solid #eee;
  display: flex;
  justify-content: center;
  position: sticky;
  top: 0;
  z-index: 999;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

/* 加载中样式 */
.loading {
  padding: 40rpx;
  display: flex;
  justify-content: center;
  color: #999;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 30rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.7;
}

.empty-text {
  color: #999;
  font-size: 30rpx;
  margin-bottom: 30rpx;
}

.go-menu-btn {
  background-color: #e64340;
  color: #fff;
  font-size: 30rpx;
  padding: 15rpx 40rpx;
  border-radius: 40rpx;
  margin-top: 20rpx;
}

.go-login-btn {
  background-color: #07c160;
  color: #fff;
  font-size: 30rpx;
  padding: 15rpx 40rpx;
  border-radius: 40rpx;
  margin-top: 20rpx;
}

.order-list {
  padding: 10rpx;
}

/* 日期分组标题样式 */
.date-header {
  margin: 30rpx 0 15rpx 10rpx;
  padding-left: 20rpx;
  font-size: 28rpx;
  color: #666;
  font-weight: bold;
  border-left: 6rpx solid #FF6B35;
  line-height: 1.2;
}

.order-item {
  margin-bottom: 30rpx;
  border-radius: 12rpx;
  background: #fff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.order-header {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.order-number {
  font-size: 26rpx;
  color: #666;
}

.order-status {
  font-size: 26rpx;
  color: #FF6B35;
  font-weight: bold;
}

.order-status.canceled {
  color: #999;
}

.order-dishes {
  padding: 20rpx;
}

.dish-item {
  display: flex;
  padding: 10rpx 0;
  border-bottom: 1rpx dashed #f5f5f5;
}

.dish-item:last-child {
  border-bottom: none;
}

.dish-img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.dish-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.dish-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.dish-quantity {
  font-size: 24rpx;
  color: #999;
}

.order-info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  font-size: 26rpx;
  background-color: #fafafa;
  border-top: 1rpx solid #f5f5f5;
}

.order-time {
  font-size: 22rpx;
  color: #999;
  flex: 1;
  white-space: normal;
  word-break: break-all;
}

.order-total {
  font-size: 26rpx;
  color: #666;
  text-align: right;
}

.order-footer {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding: 20rpx;
  border-top: 1rpx solid #f5f5f5;
  background: #fff;
}

.action-buttons {
  display: flex;
}

.delete-btn {
  background: #ff5252;
  color: #fff;
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  border: none;
  line-height: 1.5;
  min-height: auto;
  width: 160rpx;
} 