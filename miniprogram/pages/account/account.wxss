/* pages/account/account.wxss */
.container {
  min-height: 100vh;
  background-color: #f8f8f8;
  padding-bottom: 40rpx;
}

/* 头部样式 */
.header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 88rpx;
  background-color: #ff7e43;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
}

.title {
  color: #ffffff;
  font-size: 34rpx;
  font-weight: 500;
}

/* 信息卡片样式 */
.info-card {
  margin: 108rpx 30rpx 30rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

/* 头像部分样式 */
.avatar-section {
  padding: 40rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: linear-gradient(to bottom, #ffffff, #ffffff);
}

.avatar-wrapper {
  background: none;
  padding: 0;
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.avatar-wrapper::after {
  border: none;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
  border: 4rpx solid #ffffff;
}

.avatar-edit-hint {
  font-size: 24rpx;
  color: #ffffff;
  margin-top: 10rpx;
}

/* 信息部分样式 */
.info-section {
  padding: 30rpx;
}

.info-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  width: 160rpx;
  color: #666666;
  font-size: 28rpx;
}

.info-input {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
}

.info-input.disabled {
  color: #999999;
}

.info-value {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
}

/* 角色标签样式 */
.role-tag {
  padding: 4rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  height: 40rpx;
  line-height: 0rpx;
}

.role-tag.admin {
  background-color: #ff7e43;
  color: #ffffff;
}

.role-tag.user {
  background-color: #b5ceda;
  color: #0a5ba7;
}

/* 保存按钮样式 */
.button-section {
  margin: 60rpx 30rpx;
}

.save-btn {
  width: 100%;
  height: 88rpx;
  line-height: 58rpx;
  background-color: #cccccc;
  color: #ffffff;
  font-size: 32rpx;
  border-radius: 44rpx;
  transition: all 0.3s;
}

.save-btn.active {
  background-color: #ff7e43;
} 