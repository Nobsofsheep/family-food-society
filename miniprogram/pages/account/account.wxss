/* pages/account/account.wxss */
.container {
  padding-bottom: 100rpx;
  box-sizing: border-box;
}

.header {
  width: 100%;
  height: 90rpx;
  background-color: #ff7e43;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9999;
}

.title {
  font-size: 34rpx;
  color: #ffffff;
  font-weight: bold;
}

.user-info-card {
  margin: 120rpx 30rpx 30rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
  margin-bottom: 20rpx;
}

.text-center {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.role-tag {
  display: inline-block;
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  color: #ffffff;
}

.role-tag.admin {
  background-color: #ff7e43;
}

.role-tag.user {
  background-color: #3498db;
}

.info-list {
  margin-bottom: 30rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-item:last-child {
  border-bottom: none;
}

.label {
  color: #888888;
  font-size: 28rpx;
}

.value {
  color: #333333;
  font-size: 28rpx;
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.form-section {
  margin: 30rpx 30rpx 0;
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.form-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.form-item {
  display: flex;
  flex-direction: column;
  margin-bottom: 20rpx;
}

.form-item .label {
  margin-bottom: 10rpx;
}

.input {
  height: 80rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
}

.btn-area {
  margin: 60rpx 30rpx;
}

.save-btn {
  background-color: #ff7e43;
  color: #ffffff;
  border-radius: 80rpx;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 32rpx;
  font-weight: bold;
} 