/* pages/menu-manage/menu-manage.wxss */
.container {
  padding: 20rpx;
  background: #f8f8f8;
  min-height: 100vh;
}

.header {
  padding: 20rpx 0;
  margin-bottom: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
}

.search-bar {
  display: flex;
  align-items: center;
  background: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.search-bar icon {
  margin-right: 10rpx;
}

.search-bar input {
  flex: 1;
  font-size: 28rpx;
}

.filter-btn {
  font-size: 26rpx;
  color: #666;
  padding: 0 20rpx;
  border-left: 1rpx solid #eee;
}

.dish-list {
  background: #fff;
  border-radius: 10rpx;
  padding: 10rpx;
}

.dish-item {
  display: flex;
  padding: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.dish-img {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.dish-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.dish-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.dish-meta {
  display: flex;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.cook-time {
  margin-right: 20rpx;
}

.dish-categories {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 10rpx;
}

.category-tag {
  font-size: 22rpx;
  color: #FF6B35;
  background: rgba(255, 107, 53, 0.1);
  padding: 6rpx 12rpx;
  border-radius: 6rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}

.dish-actions {
  display: flex;
  justify-content: flex-end;
}

.edit-btn {
  background: #eee;
  color: #666;
  margin-right: 20rpx;
  font-size: 24rpx;
  padding: 0 20rpx;
  line-height: 50rpx;
}

.delete-btn {
  background: #FF6B35;
  color: #fff;
  font-size: 24rpx;
  padding: 0 20rpx;
  line-height: 50rpx;
}

.empty-state {
  margin-top: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

.float-btn {
  position: fixed;
  right: 40rpx;
  bottom: 40rpx;
  width: 100rpx;
  height: 100rpx;
  background: #FF6B35;
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 53, 0.4);
}

.float-btn text {
  font-size: 60rpx;
  font-weight: bold;
} 